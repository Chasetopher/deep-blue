<div class="container mt-5">
    <div class="row clearfix">
        <div class="col-md-12 table-responsive">

            <table class="table table-bordered table-hover table-sortable" id="tab_logic">

                <thead>
                    <tr>
                        <th class="text-center">
                            Product Name
                        </th>
                        <th class="text-center">
                            Stock
                        </th>
                        <th class="text-center">
                            Price
                        </th>

                        <th class="text-center" style="border-top: 1px solid #ffffff; border-right: 1px solid #ffffff;">
                            Category
                        </th>
                    </tr>
                </thead>

                <tbody>

                    {{#each products}}
                    <tr>
                        <td data-name="name">
                            <p>{{product_name}}</p>
                        </td>
                        <td data-name="mail">
                            <p>{{stock}}</p>
                        </td>
                        <td data-name="desc">
                            <p>{{price}}</p>
                        </td>

                        <td data-name="cat">
                            <p>{{category.category_name}}</p>
                        </td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
    <button id="add_row" class="btn btn-primary btn-sm">Add Row</button>
    <section class="add-product-div mt-5" id="formDiv">
        <form onsubmit="addProduct()">
            <div class="top-form-section">
                <input class="form-control form-control-sm" type="text" placeholder="product name" aria-label=".form-control-sm example">
                <input class="form-control form-control-sm" type="text" placeholder="stock" aria-label=".form-control-sm example"> 
            </div>
            <div class="botton-form-section">
                <input class="form-control form-control-sm" type="text" placeholder="price" aria-label=".form-control-sm example">
                <select class="form-select" aria-label="Default select example" id="cat-select">
                    <option selected>Choose a category</option>
                </select>               
            </div>
            <button id="add-prod-btn" class="btn btn-primary btn-md">Add Product</button>
        </form>
    </section>
</div>